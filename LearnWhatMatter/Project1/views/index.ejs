<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-lg px-5 py-3 bg-zinc-800" type="text" name="title" id="title" placeholder="Enter title">
                <textarea class=" block mt-2 px-5 py-3 w-full rounded-lg bg-zinc-800 resize-none" name="task" id="task" placeholder="write your task"></textarea>
                <input type="submit" value="Add Task" class="mt-2 px-5 py-3 bg-blue-600 cursor-pointer" id="addTask">
            </form>
        </div>

        <div class="tasks flex gap-3 flex-wrap p-10">

            <% if(files.length > 0){ %>
                <% files.forEach(file => { %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-lg mb-2 ">
                        <h1 class="text-white text-3xl treacking-tighter"><%= file %></h1>
                        <a href="/file/<%=file%>" class="text-blue-500 inline-block mt-3">Read More..</a> 
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">No Task</h3>
            <% } %>
        </div>
    

            <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-lg mb-2 hidden ">
                <h1 class="text-white text-3xl treacking-tighter">Task 1</h1>
                <a href="" class="text-blue-500 inline-block mt-3">Read More..</a>
                
            </div>
            <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-lg mb-2 hidden ">
                <h1 class="text-white text-3xl treacking-tighter">Task 2</h1>
                <a href="" class="text-blue-500 inline-block mt-3">Read More..</a>
                
            </div>

            <!-- <h3 class="text-zinc-600">No Task</h3> -->
        <!-- </div> -->
    </div>

    <script src="/javascripts/script.js"></script>
</body>
</html>